<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-finance-uc11-13-tables" author="system">
        <!-- UC11: Контроль кассы -->
        <createTable tableName="cash_register_reconciliations">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cash_desk_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="shift_start" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="shift_end" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="expected_balance" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="actual_balance" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="discrepancy" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="TEXT"/>
        </createTable>

        <!-- UC12: Выявление аномальных транзакций -->
        <createTable tableName="anomalous_transactions">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cash_operation_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="risk_level" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="reason" type="TEXT"/>
            <column name="amount" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="detected_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="reviewed_by" type="UUID"/>
            <column name="reviewed_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="reviewer_notes" type="TEXT"/>
        </createTable>

        <!-- UC13: Анализ выигрышей и проигрышей -->
        <createTable tableName="game_session_analyses">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="game_table_id" type="VARCHAR(255)"/>
            <column name="period_start" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="period_end" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="total_sessions" type="BIGINT"/>
            <column name="total_bets" type="NUMERIC(19,2)"/>
            <column name="total_wins" type="NUMERIC(19,2)"/>
            <column name="rtp" type="NUMERIC(19,4)"/>
            <column name="expected_rtp" type="NUMERIC(19,4)"/>
            <column name="rtp_deviation" type="NUMERIC(19,4)"/>
            <column name="large_wins_count" type="INTEGER"/>
            <column name="largest_win_amount" type="NUMERIC(19,2)"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="analyzed_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="TEXT"/>
        </createTable>

        <createIndex indexName="idx_reconciliation_cash_desk" tableName="cash_register_reconciliations">
            <column name="cash_desk_id"/>
        </createIndex>

        <createIndex indexName="idx_reconciliation_status" tableName="cash_register_reconciliations">
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_anomaly_operation" tableName="anomalous_transactions">
            <column name="cash_operation_id"/>
        </createIndex>

        <createIndex indexName="idx_anomaly_status" tableName="anomalous_transactions">
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_anomaly_risk_level" tableName="anomalous_transactions">
            <column name="risk_level"/>
        </createIndex>

        <createIndex indexName="idx_game_analysis_table" tableName="game_session_analyses">
            <column name="game_table_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>


