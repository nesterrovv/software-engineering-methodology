<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-update-existing-tables" author="system">
        <!-- Добавляем индексы для существующих таблиц, если их нет -->
        <createTable tableName="disciplinary_violation" ifNotExists="true">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_id" type="UUID"/>
            <column name="type" type="VARCHAR(50)"/>
            <column name="description" type="TEXT"/>
            <column name="occurred_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>

        <createIndex indexName="idx_violations_employee_id" tableName="disciplinary_violation" ifNotExists="true">
            <column name="employee_id"/>
        </createIndex>

        <createIndex indexName="idx_violations_occurred_at" tableName="disciplinary_violation" ifNotExists="true">
            <column name="occurred_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>


